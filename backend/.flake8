[flake8]
max-line-length = 88
max-doc-length = 88
max-complexity = 10
max-file-length = 300
max-function-length = 50
extend-ignore = E203,W503,E501
exclude =
    .git,
    __pycache__,
    .venv,
    .eggs,
    *.egg,
    build,
    dist,
    .mypy_cache,
    .pytest_cache
per-file-ignores =
    __init__.py:F401
    test_*.py:F401,F811
