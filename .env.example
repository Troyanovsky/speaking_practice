# ============================================
# Speaking Practice App - Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# --------------------------------------------
# LLM Configuration
# --------------------------------------------
# The LLM provider supports any OpenAI-compatible API

# Option 1: OpenAI (default)
LLM_BASE_URL=https://api.openai.com/v1
LLM_API_KEY=sk-your-openai-api-key-here
LLM_MODEL=gpt-4o

# Option 2: Local LLM via Ollama
# LLM_BASE_URL=http://localhost:11434/v1
# LLM_API_KEY=ollama
# LLM_MODEL=llama3

# Option 3: Azure OpenAI
# LLM_BASE_URL=https://your-resource.openai.azure.com/openai/deployments/your-deployment
# LLM_API_KEY=your-azure-api-key
# LLM_MODEL=gpt-4

# Option 4: Other OpenAI-compatible APIs (e.g., LocalAI, LM Studio, etc.)
# LLM_BASE_URL=http://localhost:1234/v1
# LLM_API_KEY=your-api-key
# LLM_MODEL=your-model-name

# Backward compatibility: OPENAI_API_KEY still works
# OPENAI_API_KEY=sk-your-openai-api-key-here

# --------------------------------------------
# Application Settings
# --------------------------------------------
PROJECT_NAME=Speaking Practice App
API_V1_STR=/api/v1

# --------------------------------------------
# Audio Settings
# --------------------------------------------
# These are set automatically but can be overridden
# AUDIO_UPLOAD_DIR=backend/app/data/uploads
# AUDIO_OUTPUT_DIR=backend/app/data/outputs
